<!DOCTYPE html>
<html>
<head>
    <!-- Add your meta tags, stylesheets, and other head content here -->
    <title>@ViewData["Title"] - Library Management System</title>
</head>
<body>
    <div>
        <header>
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <div class="container">
                    <a class="navbar-brand" href="#">Library Management</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Books")">Books</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Borrowings")">Borrowings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Readers")">Readers</a>
                            </li>
                            <!-- Add more navigation links as needed -->
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>

    <div>
        <main role="main" class="container">
            @RenderBody()
        </main>
    </div>

    <!-- Add your scripts, jQuery, Bootstrap, etc., here -->
    @RenderSection("Scripts", required: false)
</body>
</html>
